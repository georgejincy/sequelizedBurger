<div class = "container">
<h1> Eat-Da-Burger!</h1>
	<div class = "row">
		<div class = "col-lg-6 col-md-6 col-sm-6 burger-well">
		<div class="panel panel-primary">
		  <div class="panel-heading">
		    <h2 class="panel-title">Burgers waiting to be devoured!</h2>
		  </div>
		  <div class="panel-body">
		    <ul>
				{{#each burgers}}
					{{#unless this.devoured}}
				
						<li class="list-unstyled"> {{this.burger_name}} 
						
							<form action="/burgers/update/{{this.id}}?_method=PUT" method="POST">
			          			<input type="hidden" name="devoured" value="true">
			          			<button type="submit" class="btn btn-info">DEVOUR IT!</button>
			       			</form>

						</li>
					{{/unless}}
				{{/each}}
			</ul>
		  </div>
		</div>

		</div>

		<div class = "col-lg-6 col-md-6 col-sm-6 burger-well">
			

			<div class="panel panel-success">
			  <div class="panel-heading">
			    <h2 class="panel-title">Burgers devoured! </h2>
			  </div>
			  <div class="panel-body">
			    
					<ul>
						{{#each burgers}}
							{{#if this.devoured}}
								<li class="list-unstyled list-group-item-success">{{this.burger_name}}</li>
							{{/if}}
						{{/each}}
					</ul>
			  </div>
			</div>

		</div>
	</div>

	<div class="row">

		<div class = "well col-md-offset-4 col-md-4 create-burger">
			<h2> Create your burger! </h2>

			<form class = "create-form" action = "/burgers/create" method = "POST">
				<div class="form-group">
					<label for="burger">Burger Name: </label>
					<input type="text" id="burger" name="burgername">
				</div>
				<button type="submit" class="btn btn-primary">Create</button>

			</form>
		</div>
	</div>
</div>